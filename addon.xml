<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.line.wrapper"
       name="LINE App Wrapper"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
	  <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">LINE App Wrapper</summary>
    <summary lang="ja">LINEアプリラッパー</summary>
    <description lang="en">Detect incoming to LINE app (Chrome app) via Selenium</description>
    <description lang="ja">Seleniumを介してLINEアプリ（Chromeアプリ）への着信を検出します</description>
    <disclaimer lang="en">Tested on macOS</disclaimer>
    <disclaimer lang="ja">macOSでの動作を確認</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
